{
    "trailingComma": "all",
    "singleQuote": true,
    "useTabs": false,
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": [
                "*.json"
            ],
            "options": {
                "parser": "json"
            }
        }
    ]
}